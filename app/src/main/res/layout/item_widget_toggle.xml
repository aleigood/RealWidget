<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_width"
    android:clickable="false"
    android:focusable="false">

    <!-- 是否是clickable对属性没有影响，只有在设置某个view的click属性时才会触发 -->

    <RelativeLayout
        android:id="@+id/pos1"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/bg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bg1"
            android:ellipsize="end"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingLeft="@dimen/padding"
            android:singleLine="true"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bg1"
            android:layout_toRightOf="@id/label1"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingRight="@dimen/padding"
            android:singleLine="true"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/top_info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bg1"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingRight="@dimen/padding"
            android:paddingTop="@dimen/padding_bottom"
            android:singleLine="true"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_alignTop="@id/bg1"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingLeft="@dimen/padding"
            android:paddingTop="@dimen/padding"
            android:singleLine="true"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/bgImg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title1"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textSize="35sp"
                android:typeface="monospace"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/widget_selector"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/divider_width"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/pos2"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/bg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bg2"
            android:ellipsize="end"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingLeft="@dimen/padding"
            android:singleLine="true"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bg2"
            android:layout_toRightOf="@id/label2"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingRight="@dimen/padding"
            android:singleLine="true"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/top_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bg2"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingRight="@dimen/padding"
            android:paddingTop="@dimen/padding_bottom"
            android:singleLine="true"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_alignTop="@id/bg2"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingLeft="@dimen/padding"
            android:paddingTop="@dimen/padding"
            android:singleLine="true"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/bgImg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title2"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textSize="35sp"
                android:typeface="monospace"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/widget_selector"/>
    </RelativeLayout>

</LinearLayout>