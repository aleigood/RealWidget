<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pos1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_width"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bg"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/padding_bottom"
        android:paddingLeft="@dimen/padding"
        android:singleLine="true"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/label"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="@dimen/padding" >

        <TextView
            android:id="@+id/no_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/event1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/color1"
                android:layout_width="4dip"
                android:layout_height="15dip"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/color1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title1"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/color1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/event2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/padding" >

            <ImageView
                android:id="@+id/color2"
                android:layout_width="4dip"
                android:layout_height="15dip"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/color2"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title2"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/color2"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bg"
        android:layout_alignRight="@id/bg"
        android:layout_marginBottom="-4dip"
        android:includeFontPadding="false"
        android:paddingRight="@dimen/padding"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/mounth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bg"
        android:layout_toLeftOf="@id/day"
        android:paddingBottom="@dimen/padding_bottom"
        android:textSize="@dimen/text_size" />

    <ImageView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_selector" />

</RelativeLayout>